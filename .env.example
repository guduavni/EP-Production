# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=dev-secret-key-1234567890abcdef1234567890abcdef
SECURITY_PASSWORD_SALT=dev-salt-1234567890abcdef

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ep_simulator

# Admin Configuration
ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123

# Session Configuration
PERMANENT_SESSION_LIFETIME=3600  # 1 hour in seconds
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE='Lax'

# File Uploads
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16 * 1024 * 1024  # 16MB max file size
ALLOWED_EXTENSIONS={'png', 'jpg', 'jpeg', 'gif', 'pdf', 'doc', 'docx'}

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# Feature Flags
ENABLE_REGISTRATION=True
REQUIRE_EMAIL_VERIFICATION=False

# API Configuration
API_PREFIX=/api/v1
API_RATE_LIMIT=200 per day
API_RATE_LIMIT_PER_EXAM=50 per day

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key

# File Uploads
UPLOAD_FOLDER=./static/uploads
MAX_CONTENT_LENGTH=52428800  # 50MB max file size
ALLOWED_EXTENSIONS=wav,mp3,ogg,m4a

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Logging Configuration
LOG_LEVEL=DEBUG

# Session Configuration
PERMANENT_SESSION_LIFETIME=604800  # 7 days in seconds
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting
RATELIMIT_DEFAULT=200 per day;50 per hour
